{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://docs.derivacloud.org/schemas/column_display.schema.json",
  "title": "tag:isrd.isi.edu,2016:column-display",
  "description": "Schema document for the 'column-display' annotation.",
  "definitions": {

    "column-display-entry": {
      "oneOf": [
        { "$ref": "#/definitions/context-name" },
        { "$ref": "#/definitions/column-display-options" }
      ]
    },

    "context-name": { "type": "string" },

    "column-display-options": {
      "type": "object",
      "properties": {

        "pre_format": {
          "type": "object",
          "properties": {
            "format": {
              "$comment": "Specify a printf style formatting pattern",
              "type": "string"
            },
            "bool_true_value": { "type": "string" },
            "bool_false_value": { "type": "string" }
          },
          "additionalProperties": false
        },

        "markdown_pattern": { "type": "string" },

        "template_engine": {
            "type": "string",
            "enum": [ "handlebars", "mustache" ]
        },

        "column_order": {
          "oneOf": [
            {
              "$comment": "Use this pattern to disable sort options on this column",
              "type": "boolean",
              "const": false
            },
            {
              "$comment": "Use this pattern to specify the alternate sort key for this column",
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/sort-key" }
            }
          ]
        }
      },
      "additionalProperties": false,
      "dependencies": {
        "template_engine": ["markdown_pattern"]
      }
    },

    "sort-key": {
      "$comment": "A sort key can be either a column name or an object with column and descending (boolean)",
      "oneOf": [
        { "$ref": "#/definitions/column-name" },
        {
          "type": "object",
          "properties": {
            "column": {
              "$ref": "#/definitions/column-name"
            },
            "descending": {
              "type": "boolean",
              "default": false
            }
          },
          "required": ["column"],
          "additionalProperties": false
        }
      ]
    },

    "column-name": {
      "type": "string",
      "validate-model": true
    }
  },

  "type": "object",
  "patternProperties": {
    "^[*]$|^detailed$|^compact.*$|^entry.*$": {
      "$ref": "#/definitions/column-display-entry"
    }
  },
  "additionalProperties": false
}